<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 0;
      background-color: #f4f4f4; } .email-container { max-width: 600px; margin:
      20px auto; background-color: #ffffff; padding: 20px; border: 1px solid
      #dddddd; border-radius: 5px; } h1 { color: #333333; text-align: center; }
      table { width: 100%; border-collapse: collapse; margin: 20px 0; } table,
      th, td { border: 1px solid #dddddd; } th, td { padding: 10px; text-align:
      left; } th { background-color: #f4f4f4; } .total { text-align: right;
      font-size: 18px; font-weight: bold; }
    </style>
  </head>
  <body>
    <div class='email-container'>
      <h1>Order Summary11</h1>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Height</th>
            <th>Count</th>
            <th>Price per Unit</th>
            <th>Total Price</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{series}}</td>
              <td>{{height_mm}}</td>
              <td>{{count}}</td>
              <td>{{price_net}}</td>
              <td>{{total_price}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <p class='total'>Total Order Price: {{total}}</p>
    </div>
  </body>
</html>